<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividadNotas">

    <ImageView
        android:id="@+id/iv_logo_ipchile"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        app:srcCompat="@drawable/logo_ipchile" />

    <TextView
        android:id="@+id/tv_subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Este mÃ³dulo permite el calculo de notas antes de dar un examen y permite saber si se encuentra eximido o no"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_epr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ingrese nota EPR1 (10%)"/>

    <EditText
        android:id="@+id/et_epe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ingrese nota EPE1 (15%)"/>

    <EditText
        android:id="@+id/et_epr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ingrese nota EPR2 (20%)"/>

    <EditText
        android:id="@+id/et_epe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ingrese nota EPE2 (25%)"/>

    <EditText
        android:id="@+id/et_eva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ingrese nota EVA (30%)"/>

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calcularPromedio"
        android:text="Calcular Promedio" />
</LinearLayout>